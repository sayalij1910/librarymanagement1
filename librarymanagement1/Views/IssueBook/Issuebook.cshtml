            @Html.AntiForgeryToken()

            <div class="editor-field">
                @Html.Label("Date of Issue")

            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Date, new { id = "date-picker" })
            </div>

           

                <div class="editor-field1">
                    @Html.Label("AdmissionNo")

                </div>
                <div class="editors-field">
                    @Html.TextBoxFor(model => model.AdmissionNoFilter, new { id = "txtbox" })
                </div>
                <div class="editor-field2">
                    @Html.Label("AccessionNo")

                </div>
                <div class="editor-field2">
                    @Html.TextBoxFor(model => model.AccessionNoFilter, new { id = "txtbox1" })
                </div>

                <div class="form-group21">
                    <div class="col-md-offset-2 col-md-10">
