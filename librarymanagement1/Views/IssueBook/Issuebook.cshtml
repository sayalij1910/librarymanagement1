                    </div>
                </div>

                <div class="form-group3">
                    @Html.LabelFor(model => model.Publisher, htmlAttributes: new { @class = "control-label4 col-md-2" })
                    <div class="col-md-13" style="width:350px">

                        @Html.EditorFor(model => model.Publisher, new { htmlAttributes = new { @class = "form-control1", style = "width:801px" } })
                        @Html.ValidationMessageFor(model => model.Publisher, "", new { @class = "text-danger" })
                    </div>
                </div>
