                        @Html.ValidationMessageFor(model => model.RollNo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="editor-fields">
                    @Html.Label("Father's Name")
                </div>
                <div class="editor-fields">
                    @Html.TextBoxFor(model => model.FName, new { id = "txtbox11" })
                </div>
                <div class="editor-fields1">
                    @Html.Label("Contact2")

                </div>
                <div class="editor-fields1">
                    @Html.TextBoxFor(model => model.FMobile, new { id = "txtbox12" })
                </div>
                <div class="form-groups3 row ">
                    @Html.LabelFor(model => model.Remarks, htmlAttributes: new { @class = "control-label3 col-md-2" })
                    <div class="col-md-4" style="width:350px">
                        @Html.EditorFor(model => model.Remarks, new { htmlAttributes = new { @class = "form-control12", style = "width:801px" } })
                        @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group23">
                    <!-- Backward button -->

                    <input type="image" class="img" src="@Url.Content("~/Content/Image/backward.png")" alt="Backward" onclick="goBack()" />

                    <!-- Forward button -->
                    <input type="image" class="img1" src="@Url.Content("~/Content/Image/forward.png")" alt="Forward" onclick="goForward()" />
                </div>
                <div class="heading">
                    <h1>
                        BOOK DETAILS
                    </h1>
                </div>
                <div class="form-group2 row">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label3 col-md-2" })
                    <div class="col-md-12" style="width:350px">
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", style = "width:801px" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group3">
                    @Html.LabelFor(model => model.Author, htmlAttributes: new { @class = "control-label4 col-md-2" })
                    <div class="col-md-13" style="width:350px">
                        @Html.EditorFor(model => model.Author, new { htmlAttributes = new { @class = "form-control1", style = "width:801px" } })
                        @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group2 row">
                    @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "control-label3 col-md-2" })
