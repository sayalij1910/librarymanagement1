            @Html.AntiForgeryToken()

            <div class="editor-field">
                @Html.Label("Date of Issue")

            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Date, new { id = "date-picker" })
            </div>
            <div class="editor-field1">
                @Html.Label("AddmissionNo")

            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.AccessionNo, new { id = "txtbox" })
            </div>
            <div class="editor-field2">
