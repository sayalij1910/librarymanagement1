<body>
    <div class="container">
        <div class="navbar">
            <a href="#" class="active">Home</a>
        </div>


        <!-- Sidebar -->
        <div class="sidebar">
           
        </div>

        <div class="h1">
            <h1><center>RECEIVE BOOK</center></h1>
