                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control10", style = "width:801px" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-groups1 row">
                @Html.LabelFor(model => model.Class, htmlAttributes: new { @class = "control-label3 col-md-2" })
