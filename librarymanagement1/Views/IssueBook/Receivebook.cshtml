            </div>
            <div class="form-groups2 ">
                @Html.LabelFor(model => model.RollNo, htmlAttributes: new { @class = "control-label3 col-md-2" })
                <div class="col-md-3" style="width:350px">
                    @Html.EditorFor(model => model.RollNo, new { htmlAttributes = new { @class = "form-control12", style = "width:235px" } })
                    @Html.ValidationMessageFor(model => model.RollNo, "", new { @class = "text-danger" })
